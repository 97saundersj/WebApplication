@model WebApplication1.Models.PostDetailsViewModel

@{
    ViewData["Title"] = Model.Post.Title;
}

<div>
    <a asp-action="Comments" asp-route-id="@Model.Post.ID"><h2>@Html.DisplayFor(model => model.Post.Title)</h2></a>
    <hr />

    <p>@Html.DisplayFor(model => model.Post.Content)</p>
    <hr />

    <p>Created by @Html.DisplayFor(modelItem => Model.Post.Username) at @Html.DisplayFor(modelItem => Model.Post.Published)</p>
</div>
<hr />

<h3>Comments</h3>
<hr />

<h4>Add Comment</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Details">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PostID" value="@Model.Post.ID" />
            <div class="form-group">
                <input asp-for="CommentContent" class="form-control" />
                <span asp-validation-for="CommentContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<table class="table">
    <tbody>
        @foreach (var item in Model.Comments)
        {
            <tr>
                <td>
                    <table class="table">
                        <tbody>
                            <tr>
                                <td>
                                    <p> @Html.DisplayFor(modelItem => item.Content)</p>
                                    <p>Created by @Html.DisplayFor(modelItem => item.Username) at TODO!</p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <hr />
            </tr>
        }
    </tbody>
</table>
<hr />


<div>
    <a asp-action="Edit" asp-route-id="@Model.Post.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
